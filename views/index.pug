extends layout

block content
  h1 #{title}
  p Welcome to #[strong HGMJ], His Grace's Mood Journal.

  if loggedIn
    h2 Browse Data
    ul
      li #[a(href="/asis/JournalEntry") Journal Entries].

  else
    h2 Log In
    p Please log in below.
    form(action="/login", method="post")
      p
        | Username: 
        input(type="text", name="username")
      p
        | Password: 
        input(type="password", name="password")
      input(type="submit", value="Submit")
